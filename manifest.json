{
    "manifest_version": 2,
    "name": "1001Sounds",
    "version": "0.1",
    "description": "Nests a media player for SoundCloud inside the browser with added functionality!",
    "content_security_policy": "script-src 'self' https://*.jquery.com; object-src 'self'",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js", "jquery-3.3.1.js", "soundcloud-3.3.1.js"]
    },
    "browser_action": {
        "default_popup": "index.html",
        "defualt_title": "1001Sounds",
        "default_icon": "soundcloud_icon.png"
    }
}
